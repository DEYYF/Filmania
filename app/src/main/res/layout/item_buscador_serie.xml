<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvBuscadorserie"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/grey"
    app:cardCornerRadius="@dimen/common_padding_default"
    android:layout_margin="@dimen/common_padding_min">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgPeli_serie"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/imagen_peli_serie"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_buscador_rc"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgPeli_serie"
            app:layout_constraintEnd_toStartOf="@id/ibtnAdd"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/common_padding_default" />

        <ImageButton
            android:id="@+id/ibtnclock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clock_minus_svgrepo_com"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/common_padding_default" />

        <ImageButton
            android:id="@+id/ibtnfav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_svgrepo_com"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ibtnclock"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/common_padding_default" />

        <ImageButton
            android:id="@+id/ibtnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_circle_svgrepo_com"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ibtnfav"
            android:layout_margin="@dimen/common_padding_default" />

        <TextView
            android:id="@+id/tvValoracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valoracion"
            android:textColor="@color/yellow"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/ibtnAdd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/ibtnclock"/>




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
